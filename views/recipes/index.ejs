<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        <th>Creator</th>
        <th>Recipe</th>
        <th>Style</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach(function(r) { %>
        <tr>
          <td><%= r.userName %></td>
          <td><%= r.title %></td>
          <td><%= r.style %></td>
          <% if (user) { %>
            <td><a href="/recipes/<%= r._id %>">DETAILS</a></td>
          <% } else { %>
          </tr>
          <% } %>
        
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>